<style>
  header {
    margin-bottom: var(--padding);

    flex: 1 1 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: var(--padding);
  }

  p {
    max-width: 150px;
    font-size: 0.8rem;
    color: var(--color-red);
    margin-bottom: 0.5em;
    text-align: center;
  }

  a {
    color: inherit;
  }

  h1 {
    font-size: 0px;
  }

  #donate-button {
    text-decoration: none;
    background: var(--color-red);
    color: white;
    border-radius: 4em;
    padding: 0.1em 0.5em;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    scale: 1;
    display: inline-block;
  }

  #donate-button:before,
  #donate-button:after {
    content: "‚Åï";
    color: var(--color-red);
    position: absolute;
    margin-left: -0.75em;
    translate: -50% -60%;
    top: 50%;
    left: 0%;
     transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1); z-index: -1;
  }

  #donate-button:after {
    margin-left: 0.75em;
    left: 100%;
    transition-delay: 0.1s;
  }

  @media (pointer: fine) {
    #donate-button:hover {
      scale: 1.05;
    }

    #donate-button:active {
      scale: 0.95;
    }

    #donate-button:hover:before {
      margin-left: 0.25em;
      scale: 0.7;
    }

    #donate-button:hover:after {
      margin-left: -0.25em;
      scale: 0.7;
    }
  }

  #version {
    font-size: 0.4em;
    text-transform: uppercase;
    letter-spacing: 0.075em;
  }

  @media screen and (max-width: 800px) {
    p {
      max-width: var(--canvas-size);
    }
  }
</style>
