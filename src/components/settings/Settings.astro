---
import Title from "./Title.astro";
import Download from "./Download.astro";
import Color from "./Color.astro";
---

<section id="settings">
  <Title />

  <Color />

  <Download />
</section>

<style>
  #settings {
    align-self: center;
    flex: 1 1 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--padding);
  }
</style>

<style is:global>
  .setting {
    width: 100%;
    max-width: 200px;
  }

  h2 {
    color: var(--color-red);
    font-size: 1rem;
    font-weight: normal;
    margin-bottom: 0.5rem;
    font-size: 0.6rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media screen and (max-width: 800px) {
    #settings {
      max-width: var(--canvas-size);
      width: 100%;
    }
    .setting {
      max-width: 100%;
    }
  }
</style>
