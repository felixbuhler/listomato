---
import IllustrationWhite from "./IllustrationWhite.astro";
---

<div id="loading">
  <div id="loading-content" style="--image-color: white !important;">
    <IllustrationWhite />
  </div>
</div>

<style>
  #loading {
    position: fixed;
    width: 100vw;
    height: 100vh;
    width: 100dvw;
    height: 100dvh;
    background: var(--color-red);
    z-index: 9;
    display: flex;
    padding: var(--padding);
    justify-content: center;
    align-items: center;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .hidden {
    scale: 2;
    opacity: 0;
  }
</style>

<style is:global>
  @keyframes loading {
    50% {
      rotate: 0deg;
    }
    100% {
      rotate: 360deg;
    }
  }
  #loading svg {
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);

    animation: loading 1s infinite;
  }
</style>

